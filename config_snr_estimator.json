{
    "name": "SDDM2_SNREstimator",
    "n_gpu": 1,
    "sample_rate": 16000,
    "num_samples": 16448,
    "arch": {
        "type": "SNR_Estimator",
        "args": {
            "segment_len": 128,
            "segment_stride": 64,
            "inner_channel": 32,
            "norm_groups": 32,
            "channel_mults": [1,2,3,4,5],
            "res_blocks": 1,
            "dropout": 0
        }
    },
    "network": {
        "type": "UNetModified2",
        "args": {
        }
    },

    "tr_dataset": {
        "type": "AudioDataset",
        "args":{
            "data_root": "data/Voicebank-DEMAND/train_28spk",
            "datatype": ".wav"
        }
    },
    "val_dataset": {
        "type": "AudioDataset",
        "args":{
            "data_root": "data/Voicebank-DEMAND/test",
            "datatype": ".wav"
        }
    },

    "infer_dataset": {
        "type": "InferDataset",
        "args":{
            "data_root": "data/Voicebank-DEMAND/test",
            "datatype": ".wav"
        }
    },
    "data_loader": {
        "type": "AudioDataLoader",
        "args":{
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.002,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "l1_loss",
    "metrics": [
    ],
    "trainer": {
        "epochs": 500,

        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        "n_valid_data_batch": 1,
        "log_step": 100,
        
        "monitor": "min val_loss",
        "early_stop": -1,

        "tensorboard": true
    }
}
